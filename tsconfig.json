{
    "compilerOptions": {
        "preserveValueImports": false,
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "ES6",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
  }
  